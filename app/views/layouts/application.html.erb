<!DOCTYPE html>
<html>
  <head>
    <title>Demoapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="<%= flash[:notice]%>"></div>
    <% end %>
    <% if flash[:danger] %>
      <div class="<%= flash[:danger]%>"></div>
    <% end %>
    <%= yield %>
  </body>
</html>
