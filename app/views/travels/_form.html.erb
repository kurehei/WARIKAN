<div class="col-md-4 offset-md-4">
  <div class="card">      
    <%= form_with(model: @travel, local: true) do |form| %>
      <div class="form-group">
        <%= form.label "旅の題名" %>
        <%= form.text_field :name ,class: "form-control"%>
      </div>

      <div class="form-group">
        <%= form.label "旅行開始日"%>
        <%= form.date_select :from_date ,class: "form-control"%>
      </div>

      <div class="form-group">
        <%= form.label "旅行終了日"%>
        <%= form.date_select :to_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label "旅について" %>
        <%= form.text_area :detail, class: "form-control" %>
      </div>

      <div class="text-center">
        <%= form.submit "旅行を登録する",class: "btn btn-info"%>
      </div>
    <%= link_to 'Back', travels_path %>
    <% end %>
  </div>
</div>
